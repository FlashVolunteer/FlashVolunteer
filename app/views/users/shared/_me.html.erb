<% content_for :left_split do %>
    <div>
        <div class="fl">
            <%= photo_link(current_user.avatar, :profile, user_url(current_user)) %>
        </div>
        <div class="fl">
            <div><%= @user.name %></div>
            <div><%= link_to "Edit profile", edit_user_url(@user) %></div>
        </div>
        <div class="clear">
            <%= render :partial => "skills/strip", :locals => { :entity => @user, :size => "small" } %>
        </div>
    </div>
    <ul>
        <li>UPCOMING EVENTS</li>
        <li>RECOMMENDED EVENTS</li>
        <li>STATISTICS</li>
        <li>NEWS FEEDS</li>
        <li>TEAM</li>
        <li>ORGANIZATION</li>
    </ul>
<% end %>
<% content_for :right_split do %>
    <%= yield %>
<% end %>
<%= render :template => 'shared/split' %>