    <div class="title_line">
        <ul>
            <li id="splash_header"><%= yield :main_action %></li>
            <li><%= yield :link_action %></li>
        </ul>
    </div>
    <div class="fvaccount fl" >
        <%= yield :content %>
    </div>
    <div class="3rdparty_account fr">
        <div class = "subheader">Or sign in through a third party </div>
        Connect this account to sign in to Flash Volunteer:
        <div class = "thirdparty">
            <ul >
                <li class="badge " >
                    <%= image_tag("facebook_icon_32x32.png", 
                            :onmousedown => "this.className='email_down32'",
