<%= devise_error_messages! %>
<% content_for :title_content do %>
    <span style="font-size: 250%"><%= yield :main_action %></span><%= yield :link_action %>
<% end %>
<% content_for :left_content do %>
    <%= yield :form_content %>
<% end %>
<% content_for :right_content do %>
    <h4>Or sign in through a third party</h4>
    <p>Connect this account to sign in to Flash Volunteer:</p>
    <ul class="unstyled inline">
        <li>
            <%= image_tag("facebook_icon_32x32.png")%>  
        </li>
         <li>
            <%= image_tag("Google.jpg")%>  
        </li>
        <li>
            <%= image_tag("Yahoo.png")%>  
        </li>
        <li>
            <%= image_tag("OpenID.png")%>  
        </li>
    </ul>
<% end %>
<%= render(:template=>"shared/splash_two_column") %>