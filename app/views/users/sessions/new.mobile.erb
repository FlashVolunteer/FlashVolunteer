<% content_for :main_action do %>
sign in
<% end %>

<% content_for :link_action do 
link_to("sign up", new_user_registration_url)
end %>

<%= content_for :form_content do %>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:name=>"signinform", :id =>"sign"}) do |f| %>
    <h4>use your Flash account: </h4>
    <div class="row">&nbsp;</div>
    <div class="row-fluid">
        <div class="span2">
            <div class="pull-right"><%= f.label :email, "email",:class=>"full"  %></div>
        </div>
        <div class="span10">
            <%= f.email_field :email, :class=>"full"  %>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <div class="pull-right"><%= f.label :password, "password" %></div>
        </div>
        <div class="span10">
            <%= f.password_field :password, :class=>"full"  %>
        </div>
    </div>
    <div class="clear" style="margin-top: 5px">&nbsp</div>
    <% if devise_mapping.rememberable? -%>
        <div class="row-fluid">
            <div class="span2">&nbsp;</div>
            <div class="span10">
                <div class="pull-left">
                    <%= f.check_box :remember_me %>
                </div>
                <div style="padding-left: 14px">
                    <%= f.label :remember_me, "remember me" %>
                </div>
            </div>
        </div>
    <% end %>
    <div class="row">&nbsp;</div>
    <div class="row-fluid">
        <div class="span2">&nbsp;</div>
        <div class="span10">
            <%= link_to("forgot your password?", new_user_password_url)%>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row-fluid">
        <div class = "span9" style = "padding-top:8px">
            <div class = "pull-right">
            <p>or sign up with a <%=link_to("third party app", third_party_sign_in_url)%></p>  
        </div>
        </div>
        <div class = "span3">
            <button type="submit" id="sign_in" class="btn btn-primary pull-right" href="#">sign in</button>  
        </div>   
    </div>
    <% end %>
<% end %>

<%= render :template => 'users/shared/form' %>