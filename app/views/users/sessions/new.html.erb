<% content_for :main_action do %>
Sign in
<% end %>
<% content_for :link_action do 
link_to("Sign up", new_user_registration_url)
end %>
<%= content_for :form_content do %>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=>{:name=>"signinform", :id =>"sign"}) do |f| %>
    <h4>Use your Flash account: </h4>
    <div class="row">&nbsp;</div>
    <div class="row-fluid">
        <div class="span2">
            <%= f.label :email, :class=>"full"  %>
        </div>
        <div class="span10">
            <%= f.email_field :email, :class=>"full"  %>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <%= f.label :password %>
        </div>
        <div class="span10">
            <%= f.password_field :password, :class=>"full"  %>
        </div>
    </div>
    <div class="clear" style="margin-top: 5px">&nbsp</div>
    <% if devise_mapping.rememberable? -%>
        <div class="row-fluid">
            <div class="span2">&nbsp;</div>
            <div class="span10">
                <div class="pull-left">
                    <%= f.check_box :remember_me %>
                </div>
                <div style="padding-left: 20px">
                    <%= f.label :remember_me %>
                </div>
            </div>
        </div>
    <% end %>
    <div class="row-fluid">
        <div class="span2">&nbsp;</div>
        <div class="span10">
            <%= link_to("Forgot your password?", new_user_password_url)%>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row-fluid">
        <div class="span12">
            <button type="submit" href="#" class="btn btn-primary full">Sign in</button>
        </div>
    </div>
    <% end %>
<% end %>
<%= render :template => 'users/shared/form' %>