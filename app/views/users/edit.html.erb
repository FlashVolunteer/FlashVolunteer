<%= content_for :right_split do %>
    <h3>profile information</h3>
    <%= form_for(@user, :html => {:id => "form", :name => "user_form"}) do |f| %>
        <div class="row-fluid">
            <div class="span2">&nbsp;</div>
            <div class="span2">
                <%= image_tag current_user.avatar.url(:profile) %>
            </div>
            <div class="span8">
                <%= f.file_field :avatar %>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right"><%= f.label :name, "name"%></div>
            </div>
            <div class="span10">
                <%= f.text_field :name, :class => "full" %>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right"><%= f.label :email, "email", :for=>"email" %></div>
            </div>
            <div class="span10">
                <%= f.text_field :email, :class => "full" %>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right"><%= f.label :birthday, "birthday", :class=>"full" %></div>
            </div>
            <div class="span4">
                <input id="user_birthday" class="full" name="user[birthday]" value="<%= @user.birthday.strftime('%-m/%-d/%Y') unless !@user.birthday %>" />

                <script type="text/javascript">
                $(document).ready(function() { $('#user_birthday').datepicker({dateFormat: 'm/d/yy'})});
                </script>
            </div>
            <div class="span1">
                <%= f.label :neighborhood, "volunteer" %>
            </div>
            <div class="span5">
                <%= f.collection_select(:neighborhood_id, Neighborhood.all, :id, :name, {:include_blank => "anywhere in king county" },  :class=>"full") %>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right"><%= f.label :categories, "categories", :for=>"email" %></div>
            </div>
            <div class="span10">
                <%= render(:partial => 'skills/form', :locals => { :entity => "user", :f => f, :skills => @user.skills }) %>
            </div>
        </div>
        <div class = "span2"></div>
        <div class = "span8"><a href="#" onclick="submitForm('user_form')" class="btn btn-primary">
            Update
        </a></div>
    <% end %>
<% end %>
<%= render(:partial => "users/shared/me_settings") %>