<% content_for :main_action do %>
sign up
<% end %>
<% content_for :link_action do 
link_to("sign in", new_user_session_url)
end %>
<%= content_for :form_content do %>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:name=>"signupform", :id=>"sign"}) do |f| %>
        <h4>create a Flash account: </h4>
        <div class="row">&nbsp;</div>
        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right"><%= f.label :name, "name" %></div>
            </div>
            <div class="span10">
                <%= f.text_field :name, :class=>"full"  %>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right"><%= f.label :email, "email" %></div>
            </div>
            <div class="span10">
                <%= f.email_field :email, :class=>"full" %>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right"><%= f.label :password, "password" %></div>
            </div>
            <div class="span10">
                <%= f.password_field :password, :class=>"full"  %>
            </div>
        </div>
        
        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right"><%= f.label :password_confirmation, "confirm password" %></div>
            </div>
            <div class="span10">
                <%= f.password_field :password_confirmation, :class=>"full"  %>
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row-fluid">
            <div class="span2">&nbsp;</div>
            <div class="span10">
                <div class="pull-left">
                    <%= f.check_box(:terms_of_service) %>
                </div>
                <div style="padding-left: 20px">
                    <label for="user_terms_of_service" style="float: none;">I accept the <%= link_to("Terms of Use", tou_url) %> and <%= link_to("Privacy Policy", privacy_url) %></label>
                </div>
            </div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="row-fluid">
            <div class="span12">
                <button type="submit" class="btn btn-primary pull-right" href="#">sign up</button>
            </div>
        </div>
    <% end %>
<% end %>
<%= render :template => 'users/shared/form' %>