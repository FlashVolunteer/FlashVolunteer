<% content_for :main_action do %>
Sign up
<% end %>
<% content_for :link_action do 
link_to("Sign in", new_user_session_url)
end %>
<%= content_for :content do %>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:name=>"signupform", :id=>"sign"}) do |f| %>
        <div class = "subheader">Create a Flash account: </div>

        <div class="formpadding">
            <%= f.label :name %>
            <%= f.text_field :name %>
        </div>

        <div class="formpadding">
            <%= f.label :email %>
            <%= f.email_field :email %>
        </div>

        <div class="formpadding">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>
        
        <div class="formpadding">
            <%= f.label :password_confirmation, "Confirm password" %>
            <%= f.password_field :password_confirmation %>
        </div>

        <div class="clear" style="margin-top: 10px"></div>
        <div class="formpadding">
            <div style="padding-left: 85px">
                <div class="fl">
                    <%= f.check_box(:terms_of_service) %>
                </div>
                <div style="padding-left: 20px">
                    <label for="user_terms_of_service" style="float: none;">I accept the <%= link_to("Terms of Use", tou_url) %> and <%= link_to("Privacy Policy", privacy_url) %></label>
                </div>
            </div>
        </div>
        <div style="padding-left: 70px">
            <a class="large_button" href="#" onclick="submitForm('signupform')">Sign up</a>
        </div>
    <% end %>
<% end %>
<%= render :template => 'users/shared/form' %>