

<% if @prop.errors.count > 0 %>
    <div class="alert alert-error">  
        <a class="close" data-dismiss="alert" href="#">x</a>
        <h4 class="alert-heading">Error!</h4>
        <p>
            <ul>
                <% @prop.errors.each do |attr,msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </p>
    </div>
<% end %>


<h1>Give Props</h1>
<p>When a fellow Flash Volunteer would like to thank you for a job well done, you can see those messages here. To give props to others, visit their profile pages.</p>
<br/>
<%= form_for(@prop) do |f| %>
    <div class="row-fluid">
        <div class="span1">
            <div class="pull-right"><%= f.label :message, "message"%></div>
        </div>
        <div class="span11">
            <%= f.text_area :message, :class=>"full"%>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <%= f.submit "Give Props", :class=>"pull-right btn btn-primary" %>
        </div>
    </div>
<% end %>