<%= content_for :right_split do %>
<% if flash[:error] %>
    <div class="alert alert-error">  
        <a class="close" data-dismiss="alert" href="#">x</a>
        <h4 class="alert-heading">Error!</h4>
        <p>
            <ul>
                <li><%= flash[:error] %></li>
            </ul>
        </p>
    </div>
<% end %>
<p class="bold">PROPS</p>
<p>When a fellow Flash Volunteer would like to thank you for a job well done, you can see those messages here. To give props to others, visit their profile pages.</p>
<div class="tabs bold">
    <ul class="unstyled inline" id="link_list">
        <li><a class="link_active" href="#received" id="received_link">RECEIVED (<%= @received.count %>)</a></li>
        <li><a href="#given" id="given_link">GIVEN (<%= @given.count %>)</a></li>
    </ul>
</div>
<div class="clear">&nbsp;</div>
<div id="content_sections">
    <div id="received_content">
        <% if(@received.count == 0) %>
            You have not received any props.
        <% else %>
            <%= render(:partial => "props/prop", :collection => @received, :as => :prop, :locals => { :direction => :received }) %>
        <% end %>
    </div>
    <div class="hide" id="given_content">
        <% if(@given.count == 0) %>
            You have not given any props.
        <% else %>
            <%= render(:partial => "props/prop", :collection => @given, :as => :prop, :locals => { :direction => :given }) %>
        <% end %>
    </div>
</div>
<% end %>
<script type="text/javascript">
    $(document).ready(function () { addContentHandlers(); });
</script>
<%= render :partial => 'users/shared/me' %>