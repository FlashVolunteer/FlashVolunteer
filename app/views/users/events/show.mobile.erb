<%= content_for :right_split do %>
<p class="bold">MY EVENTS</p>
<p><%= link_to "Create new event", new_event_url %></p>
<div class="tabs bold" id="link_list">
        <p><a class="link_active" href="#past">PAST</a>    |  
        <a href="#upcoming">UPCOMING</a>    |    
        <a href="#recommended">RECOMMENDED</a></p>
</div>
<div class="clear">&nbsp;</div>
<div id="content_sections">
    <div id="past_content">
        <%= render(:partial => "events/event", :collection => @past, :as => :event, :locals => { :show_links => true, :description => :medium, :type => :past}) || "You have not signed up for any events." %>
    </div>
    <div class="hide" id="upcoming_content">
        <%= render(:partial => "events/event", :collection => @upcoming, :as => :event, :locals => { :show_links => true, :description => :medium, :type => :upcoming }) || "You have no upcoming events. Click #{link_to "recommended_events_url"} to see what we have to offer." %>
    </div>
    <div class="hide" id="recommended_content">
        <%= render(:partial => "events/event", :collection => @recommended, :as => :event, :locals => { :show_links => true, :description => :medium, :type => :recommended }) || "We have no recommended events for you." %>
    </div>
</div>
<% end %>
<script type="text/javascript">
    $(document).ready(function () { addContentHandlers(); });
</script>
<%= render :partial => 'users/shared/me' %>