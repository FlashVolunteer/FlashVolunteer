<div class="container">
    <% content_for :main_action do %>
        change your password
    <% end %>

    <%= content_for :form_content do %>
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right">
                    <%= f.label :password, "new password" %>
                </div>
            </div>
            <div class="span10">
                <%= f.password_field :password, :class=>"full" %>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span2">
                <div class="pull-right">
                  <%= f.label :password_confirmation, "confirm password" %>
                </div>
            </div>
                  <div class="span10">
                <%= f.password_field :password_confirmation, :class=>"full" %>
                  </div>
        </div>

       
      <div class="row-fluid">
            <div class = "span2">&nbsp;</div>
            <div class = "span10">
                <button type="submit" href="#" class="btn btn-primary pull-right">change my password</button>   
            </div>
        </div>
      <% end %>
    <% end %>
    <%= render :template => "users/shared/form" %>
</div>