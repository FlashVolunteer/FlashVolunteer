<% content_for :main_action do %>
    change your password
<% end %>

<%= content_for :form_content do %>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

<div class="row">&nbsp;</div>
    <div class="row-fluid">
        <div class="span2">
            <div class="pull-left"><%= f.label :password, "New password" %><br />
            <%= f.password_field :password %></div>
            <div class="pull-left"><%= f.label :password_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation %></div>
        </div>
    </div>
    <div class="span10"> </div>
    <div><%= f.submit "update" %></div>

 <% end %>
<% end %>


<%= render :template => "users/shared/form" %>

