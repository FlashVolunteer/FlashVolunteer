<%= devise_error_messages! %>

<% content_for :main_action do %>
    create a password
<% end %>

<%= content_for :form_content do %>
  <%= form_for(@user, :url => confirm_account_path, :method => :put) do |f| %>
    <div>
        <%= f.hidden_field :confirmation_token %>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <div class="pull-right">
                <%= f.label :create_password, "new password" %>
            </div>
        </div>
        <div class="span10">
            <%= f.password_field :password, :class=>"full" %>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <div class="pull-right">
              <%= f.label :password_confirmation, "confirm password" %>
            </div>
        </div>
        <div class="span10">
            <%= f.password_field :password_confirmation, :class=>"full" %>
        </div>
    </div>
  <% end %>
  <div class="row-fluid">
        <div class = "span2">&nbsp;</div>
        <div class = "span10">
            <button type="submit" href="#" class="btn btn-primary pull-right">confirm</button>   
        </div>
  </div>
<% end %>
<%= render :template => "users/shared/form" %>