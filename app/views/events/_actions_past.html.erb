<%= form_tag(participation_path(event), :method=>:put, :id => "record_hours") do %>
<div class="row-fluid" id="remove_div">
    <div class="span12">
       <%= link_to("remove", register_event_url(event), :id=>"remove", :method=> :delete, :class => "btn btn-primary block") %>
    </div>
</div>
<div class="row-fluid" id="hours_div" style="display:none">
    <div class="span12">
        <%= text_field_tag :hours_volunteered, event.participations.find_by_user_id(current_user.id).hours_volunteered, :class=>"full", :style => "margin-bottom: 0px" %>
    </div>
</div>
<div class="row-fluid">&nbsp;</div>
<div class="row-fluid" id="record_div">
    <div class="span12">
        <a href="#" id="record" class="btn btn-primary block ">record</a>
    </div>
</div>
<div class="row-fluid" id="save_div" style="display:none">
    <div class="span12">
        <a href="#" id="submit_hours" class="btn btn-primary block">save</a>
        <script type="text/javascript">
            $(document).ready(function() {
                $("#submit_hours").click(function() {
                    $("#record_hours").submit();
                });
            });
        </script>
    </div>
</div>
<% end %>
<script type="text/javascript">
    $(document).ready(function() { 
        $("#record").click(function() {
            $("#remove_div").toggle();
            $("#record_div").toggle();
            $("#hours_div").toggle();
            $("#save_div").toggle();
        });
        $("#save").click(function() {
            $("#remove_div").toggle();
            $("#record_div").toggle();
            $("#hours_div").toggle();
            $("#save_div").toggle();
        });
    });
</script>