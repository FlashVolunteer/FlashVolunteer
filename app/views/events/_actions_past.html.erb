<%= form_tag(participation_path(event), :method=>:put, :id => "record_hours#{event.id}") do %>
<div class="row-fluid" id="remove_div<%= event.id %>">
    <div class="span12">
       <%= link_to("remove", register_event_url(event), :id=>"remove#{event.id}", :method=> :delete, :class => "btn btn-primary block") %>
    </div>
</div>
<div class="row-fluid" id="hours_div<%= event.id %>" style="display:none">
    <div class="span12">
        <%= text_field_tag :hours_volunteered, event.participations.find_by_user_id(current_user.id).hours_volunteered, :class=>"full", :style => "margin-bottom: 0px" %>
    </div>
</div>
<div class="row-fluid">&nbsp;</div>
<div class="row-fluid" id="record_div<%= event.id %>">
    <div class="span12">
        <a href="#" id="record<%= event.id %>" class="btn btn-primary block ">record</a>
    </div>
</div>
<div class="row-fluid" id="save_div<%= event.id %>" style="display:none">
    <div class="span12">
        <a href="#" id="submit_hours<%= event.id %>" class="btn btn-primary block">save</a>
        <script type="text/javascript">
            $(document).ready(function() {
                $("#submit_hours<%= event.id %>").click(function() {
                    $("#record_hours<%= event.id %>").submit();
                });
            });
        </script>
    </div>
</div>
<% end %>
<script type="text/javascript">
    $(document).ready(function() { 
        $("#record<%= event.id %>").click(function() {
            $("#remove_div<%= event.id %>").toggle();
            $("#record_div<%= event.id %>").toggle();
            $("#hours_div<%= event.id %>").toggle();
            $("#save_div<%= event.id %>").toggle();
        });
        $("#save").click(function() {
            $("#remove_div<%= event.id %>").toggle();
            $("#record_div<%= event.id %>").toggle();
            $("#hours_div<%= event.id %>").toggle();
            $("#save_div<%= event.id %>").toggle();
        });
    });
</script>