<div id="events" class="fl">
	<div id="event_header">
		<% if (@neighborhood == nil) %>
			<li>events near <%= link_to("Seattle", "/neighborhoods") %></li>
		<% else %>
			<li>events near <%= link_to(@neighborhood.name, "/neighborhoods") %></li>
		<% end %>
	</div>

	<div>
		<% if user_signed_in? %>
			<div id="event_left"
			     class="fl map-markerimg"
			     style="background: url(/images/red_markers.png) 0px 20px"></div>
			<div id="event_right" class="event">
				<li><%=link_to("Add an event", new_event_url) %></li>
			</div>		
		<% else %>
		<% end %>		
	</div>
	
	<% @events.each_with_index do |event, i| %>
	<div class="event_details" onclick="Map.showPopup(<%= event.id %>);">
		<div id="event_left"
		     class="fl map-markerimg"
		     style="background: url(/images/red_markers.png) 0px <%= -i*20 %>px"></div>
		<div id="event_right" class="event">
				<%= link_to(event.name, event) %><br/>
				<%= event.description %><br/>
				<%= link_to("Sign up", register_event_url(event), :method => :post) %> | 
                    <%= mail_to(event.user.email, "Contact organizer", :subject => "Questions regarding " + event.name)%><br/>
                <%= render(:partial => 'share', :locals => { :event => event }) %>
		</div>
	</div>
	<% end %>
    <div id="page">
        <%= will_paginate @events %>
    </div>
</div> <!-- end events -->
<div id="right75" class="fr">
    <div id="map"></div>
</div>
<script>
$(document).ready(function() { 
    Map.setMap('map', <%= @mapCenter.latitude %>, <%= @mapCenter.longitude %>, <%= @zoom %>); 
    var eventUrl = location.href.split("?")[0];
    var page = getParameterByName('page');
    var pageUrlPart = '';
    if (page) {
        pageUrlPart = '?page=' + page;
    }
    Map.addPoints(eventUrl + '.xml' + pageUrlPart);
});
</script>