<% if @event.hosted_by == nil %>
<div class="row-fluid">
	<div class="span6">
		<h3>event organizers (1)</h3>
	</div>
	<div class="span6" style="align:right">
		<h3><%= mail_to @event.user.email, "contact organizers",  :encode => "hex" %></h3>
	</div>
</div>
<p>
    <div class="row-fluid">
        <div class="span2">
            <%= photo_link(@event.user.avatar, :thumb, user_url(@event.user)) %>
        </div>
        <div class="span10" style="padding-top:6px">
            <%= link_to(@event.user.name, user_url(@event.user)) %>
        </div>
    </div>
</p>
<% end %>