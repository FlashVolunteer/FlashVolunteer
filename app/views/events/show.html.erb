<div id="lefthalf" class="hardmodule">
    <h2><%= @event.name %></h2>
    <%= @event.start %>-<%= @event.end %><br/>
    <%= @event.street %><br/>
    (<%= link_to(@event.neighborhood.name, neighborhoods_url) %>)<br/>
    <%= link_to("Sign up", register_event_url(@event), :method => :post) %> 
            |  <%= mail_to(@event.user.email, "Contact organizer", :subject => "Questions regarding " + @event.name)%>
            |  <%= link_to("Visit the event website", neighborhoods_url) %>
    <%= render(:partial => 'share', :locals => { :event => @event }) %>
</div>
<div class="fr">
    <%= link_to("Sign up", register_event_url, :method=> :post, :class => "large_button")%>
    <% if can? :edit, @event %>
        <%= link_to("Edit event", edit_event_url, :class => "large_button")%>
    <% end %>
</div>
<div class="clear"></div>
<div id="lefthalf">
    <div id="eventdescription" class="hardmodule">
        <div class="moduletitle">
            <h3>Description</h3>
        </div>
        <ul>
            <li><%= @event.description %></li>
        </ul>	
        <div id="eventmap" class="hardmodule">
        </div><!--end eventmap-->
    </div><!--end eventdescription-->
    
    <!-- displays special instructions -->
    <div id="personupcomingevents" class="hardmodule">
        <div class="moduletitle">
            <h3>Special Instructions</h3>
        </div>
    </div><!--end special instructions-->
</div>
<div id="righthalf">
    <div id="eventattendees" class="hardmodule">
        <% if current_user == @event.user %>
            <div class="moduletitle">
                <h3>Event attendees</h3>
            </div>
            <ul>
                <li><%= pluralize(@event.participants.size, "participant plans", "participants plan") %> to join</li>
            <% @event.participants.each do |p| %>
                <li><%= mail_to p.email, p.name%></li>
            <% end %>
            </ul>
        <% else %>
            <div class="moduletitle">
                <h3>Event Organizers</h3>
            </div>                        
            <ul>
                <li><%= mail_to @event.user.email, @event.user.name %></li>
            </ul>
        <% end %>
    </div>
</div>