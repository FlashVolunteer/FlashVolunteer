<div id="lefthalf" class="hardmodule">
    <h2><%= @event.name %></h2>
    <%= @event.start.strftime('%-m/%-d/%Y') unless !@event.start %> <%= @event.start.strftime('%l:%M%p') unless !@event.start %>-<%= @event.end.strftime('%l:%M%p') unless !@event.end %><br/>
    <%= @event.street %><br/>
    (<%= link_to(@event.neighborhood.name, neighborhoods_url) %>)<br/>
    <%= link_to("Sign up", register_event_url(@event), :method => :post) %> 
            |  <%= mail_to(@event.user.email, "Contact organizer", :subject => "Questions regarding " + @event.name)%>
            <% if @event.website != '' %>
                 |  <%= link_to("Visit the event website", @event.website, :target=>"_blank") unless @event.website == '' %>
            <% end %>
    <div class="clear" style="padding-top: 10px">
        <div class="fl"><%= render(:partial => 'share', :locals => { :event => @event }) %></div>
        <div class="fr"><%= link_to("Add to your calendar", export_event_url(@event)) %></div>
    </div>
</div>
<div class="fr">
    <% if (@event.user != current_user) %>
        <% if (@event.participants.exists?(current_user)) %>
            <%= link_to("Already signed up", "#", :class => "gray_button")%>
        <% else %>
            <%= link_to("Sign up", register_event_url, :method=> :post, :class => "orange_button")%>
        <% end %>
    <% end %>
    <% if can? :edit, @event %>
        <%= link_to("Edit event", edit_event_url, :class => "large_button")%>
    <% end %>
</div>
<div class="clear"></div>
<div id="lefthalf">
    <div id="eventdescription" class="hardmodule">
        <div class="moduletitle">
            <h3>Description</h3>
        </div>
        <ul>
            <li><%= @event.description %></li>
        </ul>	
        <div id="eventmap" class="hardmodule">
        </div><!--end eventmap-->
    </div><!--end eventdescription-->
    
    <!-- displays special instructions -->
    <div id="personupcomingevents" class="hardmodule">
        <div class="moduletitle">
            <h3>Special Instructions</h3>
        </div>
    </div><!--end special instructions-->
</div>
<div id="righthalf">
    <div id="eventattendees" class="hardmodule">
        <div class="moduletitle">
            <h3>Event Organizers</h3>
        </div>                        
        <ul>
            <li><%= mail_to @event.user.email, @event.user.name %></li>
        </ul>

    </div>
    <% if @event.participants.count > 0 %>
        <div id="eventattendees" class="hardmodule">
            <div class="moduletitle">
                <h3>Event attendees</h3>
            </div>
            <ul>
            <% @event.participants.each do |p| %>
                <li><%= p.name %></li>
            <% end %>
            </ul>
        </div>
    <% end %>
</div>