<div class="row">
    <div class="span8">
        <%= render(:partial => 'event_header') %>
    </div>
    <div class="span4">           
        <%= render ('event_detail_options') %>
    </div>
</div>
<div class="row">
    <div class="span8">
        <h3>description</h3>
        <div class="row">
            <div class="span5">
                <%= h(@event.description).gsub(/\n/, '<br/>').html_safe %>
            </div>
            <div class="span3">
                <div class="map">
                    <div id="eventmap" class="small"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="span4">
        <div>
            <% if @event.hosted_by != nil %>
                <h3>event contact</h3>
                <%= @event.hosted_by %>
            <% end %>
        </div>
        <div>
            <%= render ('event_organizers') %>
        </div>
    </div>
</div>
<div class="row">&nbsp;</div>
<div class="row">
    <div class="span8">
        <%= render ('event_special_instructions') %>
    </div>
    <div class="span4">
        <%= render ('event_volunteer') %>
    </div>
</div>

<script type="text/javascript">
$(document).ready(function() { 
    Map.setMap('eventmap', <%= @event.latitude %>, <%= @event.longitude %>, <%= 14 %>); 
    Map.addPoints("<%= event_url(@event) %>.xml", false);
});
</script>