<div>
	<div>
		<div id="lefthalf" class="hardmodule">
			<ul>
				<li id="event_header"><%= @event.name %></br></h1></li>
				<li><%= @event.start %>-<%= @event.end %></b></li>
				<li><%= @event.street %></li>
                <li><%= @event.city %>, <%= @event.state %> <%= @event.zip %></li>
                <li>(<%= link_to(@event.neighborhood.name, neighborhoods_url) %>)</li>
				<li id="event_contacts" ><%= link_to("Sign up", register_event_url(@event), :method => :post) %> 
					|  <%= mail_to(@event.user.email, "Contact organizer", :subject => "Questions regarding " + @event.name)%></a>
					|  <%= link_to("Visit the event website", neighborhoods_url) %></a>
				</li>
				<div class="share">
					<ul>
						<li>Share:</li>
						<li class="badge">
							<a target="_blank" href="">
								<%= image_tag("email-icon_normal20.png", 
									:id => "iphone-badge-img",
									:alt=>"Get our iPhone application",
									:onmousedown => "this.className='email_down32'",
									:onmouseover => "this.className='phone_hover32'",
									:onmouseup   => "this.className='phone_normal32'",
									:onmouseout  => "this.className='phone_normal32'") %>
							</a>
						</li>
						<li class="badge">
							<a target="_blank" href="">
								<%= image_tag("twitter_icon_20x20.png", 
									:id=>"twitter-badge-img", 
									:alt=>"Follow us on Twitter",
									:onmousedown => "this.className='tw_down32'",
									:onmouseover => "this.className='tw_hover32'",
									:onmouseup   => "this.className='tw_normal32'",
									:onmouseout  => "this.className='tw_normal32'")%>
							</a>                     
						</li>
						<li class="badge">
							<a target="_blank" href="">
								<%= image_tag("facebook-icon_normal20.png",
									:id=>"fb-badge-img",
									:alt=>"Find us on Facebook",
									:onmousedown => "this.className='fb_down32'",
									:onmouseover => "this.className='fb_hover32'",
									:onmouseup   => "this.className='fb_normal32'",
									:onmouseout  => "this.className='fb_normal32'")%>
							</a>
						</li>
						<li><%= link_to("Add to your calendar", export_event_url(@event))%> </li>

					</ul> 
				</div>                
			</ul>
		</div><!--end eventdetails-->
		<div class="fr">
			<div id="splash_button"><%= link_to("Sign up", register_event_url, :html => {:id => "righthalf"})%></div>
			<div id="splash_button"><%= link_to("Edit event", edit_event_url, :html => {:id => "righthalf"})%></div>
		</div>
	</div>
	<div class="clear"></div>
	<div>
		<div id="lefthalf">
			
			<!-- event description -->
			<div id="eventdescription" class="hardmodule">
				<div class="moduletitle">
					<h3>Description</h3>
				</div>
				<ul>
					<li><%= @event.description %></li>
				</ul>	
				<div id="eventmap" class="hardmodule">
				</div><!--end eventmap-->
			</div><!--end eventdescription-->
			
			<!-- displays special instructions -->
			<div id="personupcomingevents" class="hardmodule">
				<div class="moduletitle">
					<h3>Special Instructions</h3>
				</div>
				<ul>
					<li></li>
				</ul>
			</div><!--end special instructions-->
		</div>

		<div id="righthalf">

			<div id="eventattendees" class="hardmodule">
                    <% if current_user == @event.user %>
                        <div class="moduletitle">
                            <h3>Event attendees</h3>
                        </div>
                        <ul>
                            <li><%= @event.participants.size %> participants plan to join</li>
                        <% @event.participants.each do |p| %>
                            <li><%= mail_to p.email, p.name%></li>
                        <% end %>
                        </ul>
                    <% else %>
                        <div class="moduletitle">
                            <h3>Event Organizers</h3>
                        </div>                        
                        <ul>
                            <li><%= mail_to @event.user.email, @event.user.name %></li>
                        </ul>
                    <% end %>
                </div>
				<ul>   
				  <li>  
						<ul class="imagenamelinklist">
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>