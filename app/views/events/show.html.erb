<div class="row-fluid">
    <div class="span8">
        <%= render(:partial => 'event_header') %>
    </div>
    <div class="span4" style="padding-bottom: 20px">   
        <% if flash[:error] %>
            <div class="alert alert-error">  
                <a class="close" data-dismiss="alert" href="#">x</a>
                <h4 class="alert-heading">Error!</h4>
                <p>
                    <ul>
                        <li><%= flash[:error] %></li>
                    </ul>
                </p>
            </div>
        <% end %>
        <% if @event.past? && @event.attending?(current_user) %>
            <%= render(:partial => 'actions_record')%>
        <% end %>
        <%= render( :partial => 'event_detail_options') %>
    </div>
</div>
<div class="row-fluid">
    <div class="span8">
        <h3>description</h3>
        <div class="row-fluid">
            <div class="span8">
                <%= h(@event.description).gsub(/\n/, '<br/>').html_safe %>
            </div>
            <div class="span4">
                <div class="map">
                    <div id="eventmap" class="small"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="span4">
        <div>
            <% if !@event.hosted_by_user %>
                <h3>event contact</h3>
                <p><%= @event.hosted_by %></p>
              <% if @event.is_vm %>
              <div class="row-fluid">
                <div class="span1"><%= image_tag "/assets/vm_logo_small.jpg"%></div>
                <div class="span10">Provided by Volunteer Match</div>
              </div>
              <% end  %>
            <% end %>
        </div>
        <div>
            <%= render ('event_organizers') %>
        </div>
    </div>
</div>
<div class="row">&nbsp;</div>
<div class="row-fluid">
    <div class="span8">
        <%= render ('event_special_instructions') %>
    </div>
    <div class="span4">
        <%= render ('event_volunteer') %>
    </div>
</div>

<script type="text/javascript">
$(document).ready(function() { 
    Map.setMap('eventmap', <%= @event.latitude %>, <%= @event.longitude %>, <%= 14 %>); 
    Map.addPoints("<%= event_url(@event) %>.xml", false);
});
</script>