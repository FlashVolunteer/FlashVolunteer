<div>
	<div>
		<div id="eventdetails" class="hardmodule fl">
			<ul>
				<li id="event_header"><%= @event.name %></br></h1></li>
				<li><%= @event.start %>-<%= @event.end %></b></li>
				<li>_ADDRESS_ (<%= link_to(@event.neighborhood.name, neighborhoods_url) %>)</b></li>
				<li id="event_contacts" ><%= link_to("Sign up", register_event_url(@event), :method => :post) %> 
					|  <%= mail_to(@event.user.email, "Contact organizer", :subject => "Questions regarding " + @event.name)%></a>
					|  <%= link_to("Visit the event website", neighborhoods_url) %></a>
				</li>
				<div class="share">
					<ul>
						<li>Share:</li>
						<li class="badge">
							<a target="_blank" href="">
								<%= image_tag("email-icon_normal20.png", 
									:id => "iphone-badge-img",
									:alt=>"Get our iPhone application",
									:onmousedown => "this.className='email_down20'",
									:onmouseover => "this.className='phone_hover20'",
									:onmouseup   => "this.className='phone_normal20'",
									:onmouseout  => "this.className='phone_normal20'") %>
							</a>
						</li>
						<li class="badge">
							<a target="_blank" href="">
								<%= image_tag("twitter_icon_20x20.png", 
									:id=>"twitter-badge-img", 
									:alt=>"Follow us on Twitter",
									:onmousedown => "this.className='tw_down20'",
									:onmouseover => "this.className='tw_hover20'",
									:onmouseup   => "this.className='tw_normal20'",
									:onmouseout  => "this.className='tw_normal20'")%>
							</a>                     
						</li>
						<li class="badge">
							<a target="_blank" href="">
								<%= image_tag("facebook-icon_normal20.png",
									:id=>"fb-badge-img",
									:alt=>"Find us on Facebook",
									:onmousedown => "this.className='fb_down20'",
									:onmouseover => "this.className='fb_hover20'",
									:onmouseup   => "this.className='fb_normal20'",
									:onmouseout  => "this.className='fb_normal20'")%>
							</a>
						</li>
						<li><%= link_to("Add to your calendar", export_event_url(@event))%> </li>

					</ul> 
				</div>                
			</ul>
		</div><!--end eventdetails-->
		<div class = "fr">
			<div>
			<a class="fv" href="donate">
				<%= image_tag("donate.gif", 
					:id => "donate-badge-img",
					:onmousedown => "this.className='donate_down'",
					:onmouseover => "this.className='donate_hover'",
					:onmouseup   => "this.className='donate_normal'",
					:onmouseout  => "this.className='donate_normal'") %>				   
			</a>    
			</div>			
			<div>
			<a class="fv" href="donate">
				<%= image_tag("donate.gif", 
					:id => "donate-badge-img",
					:onmousedown => "this.className='donate_down'",
					:onmouseover => "this.className='donate_hover'",
					:onmouseup   => "this.className='donate_normal'",
					:onmouseout  => "this.className='donate_normal'") %>				   
			</a>                     	
			</div>			
			<div>			
			<a class="fv" href="donate">
				<%= image_tag("donate.gif", 
					:id => "donate-badge-img",
					:onmousedown => "this.className='donate_down'",
					:onmouseover => "this.className='donate_hover'",
					:onmouseup   => "this.className='donate_normal'",
					:onmouseout  => "this.className='donate_normal'") %>				   
			</a>  
			</div>			
		</div>
	</div>
	
	<div>
		<div class="fl">
			
			<!-- event description -->
			<div id="eventdescription" class="hardmodule">
				<div class="moduletitle">
					<h3>Description</h3>
				</div>
				<ul>
					<li><%= @event.description %></li>
				</ul>	
				<div id="eventmap" class="hardmodule">
				</div><!--end eventmap-->
			</div><!--end eventdescription-->
			
			<!-- displays special instructions -->
			<div id="personupcomingevents" class="hardmodule">
				<div class="moduletitle">
					<h3>Special Instructions</h3>
				</div>
				<ul>
					<li></li>
				</ul>
			</div><!--end special instructions-->
		</div>

		<div class="fr">

			<div id="eventattendees" class="hardmodule">
				<div class="moduletitle"><h3>Event organizers</h3></div>
				<ul>   
				  <li>  
						<ul class="imagenamelinklist">
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>