<% content_for :dialog do %>
    <%= form_for(@event, :method=>:post, :url => broadcast_event_url(@event)) do |f| %>
        <div class="row-fluid">
            <div class="span12">
                <label for="message">Message:</label>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <textarea class="full" name="message"></textarea>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <%= f.submit("Send Message", :class=>"btn btn-primary pull-right") %>
            </div>
        </div>
    <% end %>
<% end %>
<%= render(:template => "shared/modal", :locals => { :id => "contact_users"}) %>