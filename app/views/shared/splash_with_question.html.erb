<% content_for :form_content do %>
    <div class="row-fluid">
        <div class="span2">
            <%= image_tag("question_mark.png", 
                :id => "question-mark",
                :border=>"0") %>
        </div>
        <div class="span10">
            <div class="row">&nbsp;</div>
            <div class="row">&nbsp;</div> 
            <span style="font-size: 250%;padding-top: 35px"><%= yield :question %></span>
            <div class="row">&nbsp;</div>
            <%= yield :below_question %>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="span2 offset6">
            <%= yield :button %>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <%= yield :below_button %>
        </div>
    </div>
<% end %>
<%
    template_to_use = (yield :form_template).empty? ? 'shared/splash_with_question_no_form' : (yield :form_template)
%>
<%= render(:template =>  template_to_use) %>