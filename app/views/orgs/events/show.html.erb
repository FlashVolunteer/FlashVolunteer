<%= content_for :right_split do %>
<p class="bold">MY EVENTS</p>
<p><%= link_to "Create new event", new_event_url %></p>
<div class="tabs bold">
    <ul class="unstyled inline" id="link_list">
        <li><a id="past_link" class="link_active" href="#past">PAST</a></li>
        <li><a id="upcoming_link" href="#upcoming">UPCOMING</a></li>
    </ul>
</div>
<div class="clear">&nbsp;</div>
<div id="content_sections">
    <div id="past_content">
        <%= render(:partial => "events/event", :collection => @past, :as => :event, :locals => { :showLinks => false, :description => :medium }) || "You have sponsered any events." %>
    </div>
    <div class="hide" id="upcoming_content">
        <%= render(:partial => "events/event", :collection => @upcoming, :as => :event, :locals => { :showLinks => false, :description => :medium }) || "You have no upcoming events." %>
    </div>
</div>
<% end %>
<script type="text/javascript">
    $(document).ready(function () { addContentHandlers(); });
</script>
<%= render :partial => 'users/shared/me', :locals => { :links => "orgs/org_profile_links" } %>