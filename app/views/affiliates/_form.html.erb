<%= form_for(@affiliate) do |f| %>
    <div class="row-fluid">
      <div class="span2">
        <div class="pull-right"><%= f.label :logo, 'logo'%></div>
      </div>
      <div class="span10">
        <%= f.file_field :logo %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        <div class="pull-right"><%= f.label :name, 'name'%></div>
      </div>
      <div class="span10">
        <%= f.text_field :name, :class=>'full'%>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        <div class="pull-right"><%= f.label :description, 'description'%></div>
      </div>
      <div class="span10">
        <%= f.text_field :description, :class=>'full'%>
      </div>
    </div>
    <div class="row-fluid">
      <div class = "span2">&nbsp;</div>
      <div class = "span10">
        <button type="submit" href="#" class="btn btn-primary pull-right" formnovalidate><%= @affiliate.new_record? ? 'create' : 'save' %></button>
      </div>
    </div>
<% end %>
